{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },

    // âœ… IMPORTANT FIX
    "typeRoots": [
      "./node_modules/@types",
      "./server/types"
    ]
  },

  "include": [
    "server/**/*",
    "shared/**/*",
    "server/types/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
